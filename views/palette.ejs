    <link rel="stylesheet" href="/css/desktop.css">
</head>
<body>

    <div class="container">
        <div class="topnav">
            <div class="leftnav">
                <nav>
                    <div class="gradient">
                        <a href="/">Hue</a>
                    </div>
                </nav>
            </div>
            <div class="midnav">
                <nav>
                    <ul class="navbarlist">
                        <li><a class="active" href="/">Home</a></li>
                        <li><a href="/palette">Palettes</a></li>
                        <li><a href="#about">About</a></li>
                        <li><a href="/profile">Profile</a></li>
                    </ul>
                </nav>
            </div>
            <div class="rightnav">
                <nav>
                    <ul class="navbarlist">
                        <li><a href="/login">Login</a></li>
                        <li><a href="/register">Sign Up</a></li>
                    </ul>
                </nav>
            </div>
        </div>

        <div id="outputs"> </div>


        <!-- range slider -->
        <div class="wrapper">
            <label>Red</label><input type="range" min="0" max="255" value="0" id="red" oninput="colors()">
        </div>

        <div class="wrapper">
            <label>Green</label><input type="range" min="0" max="255" value="0" id="green" oninput="colors()">
        </div>

        <div class="wrapper">
            <label>Blue</label><input type="range" min="0" max="255" value="0" id="blue" oninput="colors()">
        </div>

        <!-- colour code output-->
        <span id="output">rgb(0, 0, 0)</span>
        <span id="hexOutput">hex(#000000)</span>
    
        <div class="checkbox-group">
            <label><input type="checkbox" id="monochromaticCheckbox"> Monochromatic</label>
            <label><input type="checkbox" id="complementaryCheckbox"> Complementary</label>
            <label><input type="checkbox" id="analogousCheckbox"> Analogous</label>
        </div>
        <button onclick="generatePalettes()">Generate Palettes</button>
        <div class="palette-container" id="paletteContainer"></div>
    </div>

        <script src="/js/colourPicker.js"></script>
        <script>
            function generatePalettes() {
                // Get checkbox states
                const monochromaticChecked = document.getElementById('monochromaticCheckbox').checked;
                const complementaryChecked = document.getElementById('complementaryCheckbox').checked;
                const analogousChecked = document.getElementById('analogousCheckbox').checked;

                // Container for displaying color palettes
                const paletteContainer = document.getElementById('paletteContainer');

                // Clear previous palettes
                paletteContainer.innerHTML = '';

                // Generate and display selected color palettes inside the grey box
                if (monochromaticChecked) {
                    paletteContainer.innerHTML += '<h2>Monochromatic Palette</h2>';
                    // Generate and display monochromatic palette here
                }
                if (complementaryChecked) {
                    paletteContainer.innerHTML += '<h2>Complementary Palette</h2>';
                    // Generate and display complementary palette here
                }
                if (analogousChecked) {
                    paletteContainer.innerHTML += '<h2>Analogous Palette</h2>';
                    // Generate and display analogous palette here
                }
            }
        </script>

</body>
</html>